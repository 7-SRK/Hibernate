<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>

    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernate</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">7059</property>

        <property name="hibernate.hbm2ddl.auto">create</property>  <!--Controls schema generation (create drops and recreates tables).-->
        <property name="hibernate.show_sql">true</property> <!--shows the queries-->
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect </property>   <!--Translates its generic HQL (Hibernate Query Language) or criteria queries into the specific SQL syntax understood by the target database.-->

    </session-factory>
</hibernate-configuration>